@model RoleDto
@{
    ViewData["Title"] = "Edit";
}

<div class="row justify-content-center align-content-center mt-3">
    <h1 class="col-8 my-4">Edit Role</h1>
    <form method="post" asp-controller="Role" asp-action="Edit" class="col-8">
        <div asp-validation-summary="ModelOnly"></div>

        <div class="form-group mb-3">
            <label class="form-label" asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <a asp-action="AddOrRemoveUser" asp-route-id="@Model.Id" class="btn btn-success">Add Or Remove User</a> <!--this id in route -->
     
        <div class="mt-4 m-auto">
            <input class="btn btn-warning" type="submit" value="Edit" />
            <a asp-controller="Role" asp-action="Index" class="btn btn-outline-dark">Back to list</a>
        </div>
    </form>
</div>
