@model List<UserInRoleViewModel>
@{
    ViewData["Title"] = "AddOrRemoveUsers";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var RoleId = ViewData["RoleId"] as string;
}



<form asp-action="AddOrRemoveUser" method="post" asp-route-roleId="@RoleId">

    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="form-group">
            <input asp-for="@Model[i].IsSelected" type="checkbox"/>
            <label asp-for="@Model[i].IsSelected"> @Model[i].UserName</label>
        </div>

        <input type="hidden" asp-for="@Model[i].UserName" />
        <input type="hidden" asp-for="@Model[i].Id" />
    }

    <input type="submit" value="Update" class="btn btn-success"/>
    <a asp-action="Edit" asp-route-id="@RoleId" class="btn btn-light">Cansel</a>
</form>
